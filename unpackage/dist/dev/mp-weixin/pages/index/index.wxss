.home {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.home .nav {
    background-color: #FB8629;
    width: 100%;
    height: 170rpx;
}
.home .nav .iconfont {
      font-size: 48rpx;
      height: 48rpx;
      color: #FFFFFF;
      padding: 20rpx 20rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
}
.home .nav .iconfont text {
        margin-top: 4rpx;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        height: 48rpx;
        font-size: 28rpx;
        color: #FFFFFF;
}
.home .nav .box {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      text-align: center;
}
.home .nav .box input {
        position: absolute;
        width: 702rpx;
        height: 60rpx;
        border-radius: 30rpx;
        border: 1px solid rgba(255, 255, 255, 0.5);
        background: inherit;
        margin: 0 20rpx 20rpx 20rpx;
}
.home .nav .box input .place-hoder {
          color: #BCBCBC;
          font-size: 24rpx;
          text-align: center;
}
.home .nav .box image {
        width: 34rpx;
        height: 34rpx;
        margin: 16rpx 0 0 240rpx;
        position: relative;
}
.home .slider {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    background-color: #f23f3b;
}
.home .slider swiper {
      margin: 30rpx 24rpx 30rpx 24rpx;
      border-radius: 30rpx;
      width: 702rpx;
      height: 336rpx;
}
.home .slider swiper image {
        width: 702rpx;
        height: 336rpx;
}

